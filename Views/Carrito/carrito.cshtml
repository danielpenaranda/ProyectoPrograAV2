@model IEnumerable<ProyectoPrograAV2.Models.Producto>

<div class="container">
    <h1>Carrito de Compras</h1>
    <hr />
    @if (Model.Any())
    {
        foreach (var producto in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@producto.imagen" class="img-fluid rounded-start" alt="@producto.nombreProducto">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@producto.nombreProducto</h5>
                            <p class="card-text">@producto.descripcion</p>
                            <p class="card-text">Cantidad: @producto.cantidadProductos</p>
                            <p class="card-text">Precio unitario: S/. @producto.precio</p>
                            <p class="card-text">Precio total: S/. @(producto.precio * producto.cantidadProductos)</p>
                            <!-- Aquí podrías agregar más detalles del producto si lo deseas -->
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="text-center">
            <button class="btn btn-primary" id="btnProcesarPago">Procesar Pago</button>
        </div>
    }
    else
    {
        <p>No hay productos en el carrito.</p>
    }
</div>
