    <form asp-action="Delete">
        <input type="hidden" asp-for="id_producto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a  class=" btn btn-success" asp-action="Index">Ir a Listado</a>
    </form>
